  <h1 style="font-weight: 700;">Mood</h1>
  <p>Today you are feeling: <em><%= @average %></em></p>
  <h3 style="font-weight: 600;">Past 7 days</h3>

  <div class="d-flex justify-content-center align-items-center container-mood">
    <% @week_moods.each_with_index do |day_mood, index| %>
      <button class="neu circle">
        <p><%= @streak_days[index].strftime("%a") %></p>
        <p><strong><%= @streak_days[index].strftime("%d") %></strong></p>
        <%= link_to "", date_moods_path(@streak_days[index]), class: "card-remove-link" %>
        <% case day_mood %>
        <% when "awful" %>
          <i class="far fa-sad-cry"></i>
        <% when "meh" %>
          <i class="far fa-meh"></i>
        <% when "neutral" %>
          <i class="far fa-smile"></i>
        <% when "happy" %>
          <i class="far fa-laugh-beam"></i>
        <% when "fabulous" %>
          <i class="far fa-grin-hearts"></i>
        <% else %>
          <i class="fas fa-times"></i>
        <% end %>
      </button>
    <% end %>
  </div>

