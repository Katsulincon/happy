<h4 style="font-weight: 600;"><%= Date.today.strftime("%a, %b %e") %></h4>
<div class="overall">
  <h5 style="font-weight: 600;">Your Mood</h5>
  <div class="emotion">
    <p>Average</p>
    <i class="<%= mood_fontawesome(@average) %>"></i>
  </div>
</div>
<div class="calendar-button">
  <h5 style="font-weight: 600;">Your Week</h5>
  <%= link_to calendar_moods_path do %>
    <p class="calendar-view">View Calendar <i class="fas fa-calendar-week"></i></p>
  <% end %>
</div>
<div class="container-mood">
  <% @week_moods.each_with_index do |day_mood, index| %>
    <button class="neu circle">
      <p class="small-text"><%= @streak_days[index].strftime("%a") %></p>
      <p><strong><%= @streak_days[index].strftime("%d") %></strong></p>
      <%= link_to "", date_moods_path(@streak_days[index]), class: "card-remove-link" %>
      <i class="<%= mood_fontawesome(day_mood) %>"></i>
    </button>
  <% end %>
</div>
<h5 style="font-weight: 600; margin-top: 20px;">Entries</h5>
<% @moods.each do |mood| %>
  <div class="card-product">
    <div class="card-product-infos">
      <h5><%= mood.created_at.in_time_zone('Asia/Tokyo').strftime("%l:%M %p") %></h5>
      <h4><%= mood.rating.capitalize %></h4>
      <div class="tags">
        <% mood.activity_list.each do |activity| %>
          <p class="activity-card"><%= activity %></p>
        <% end %>
      </div>
    </div>
    <% case mood.rating %>
    <% when "awful" %>
    <span style="font-size: 48px; margin-right: 30px">
      <i class="far fa-sad-cry"></i>
    </span>
    <% when "meh" %>
    <span style="font-size: 48px; margin-right: 30px">
      <i class="far fa-meh"></i>
    </span>
    <% when "neutral" %>
    <span style="font-size: 48px; margin-right: 30px">
      <i class="far fa-smile"></i>
    </span>
    <% when "happy" %>
    <span style="font-size: 48px; margin-right: 30px">
      <i class="far fa-laugh-beam"></i>
    </span>
    <% when "fabulous" %>
    <span style="font-size: 48px; margin-right: 30px">
      <i class="far fa-grin-hearts"></i>
    </span>
  <% else %>
    <i class="fas fa-times"></i>
  <% end %>
</div>
<% end %>
