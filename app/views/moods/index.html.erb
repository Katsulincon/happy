  <h3 style="font-weight: 600;">Mood Entries</h3>

  <% @moods.each do |mood| %>
  <div class="card-product">
    <div class="card-product-infos">
      <h5><%= mood.created_at.strftime("%D %H:%M %p %z") %></h5>
      <h2><%= mood.rating %></h2>
      <p class="activity-card"><%= mood.activity_list %></p>
    </div>
    <% case mood.rating %>
      <% when "awful" %>
        <span style="font-size: 48px; margin-right: 30px">
          <i class="far fa-sad-cry"></i>
        </span>
      <% when "meh" %>
        <span style="font-size: 48px; margin-right: 30px">
          <i class="far fa-meh"></i>
        </span>
      <% when "neutral" %>
        <span style="font-size: 48px; margin-right: 30px">
          <i class="far fa-smile"></i>
        </span>
      <% when "happy" %>
        <span style="font-size: 48px; margin-right: 30px">
          <i class="far fa-laugh-beam"></i>
        </span>
      <% when "fabulous" %>
        <span style="font-size: 48px; margin-right: 30px">
          <i class="far fa-grin-hearts"></i>
        </span>
      <% else %>
        <i class="fas fa-times"></i>
    <% end %>
  </div>
  <% end %>
