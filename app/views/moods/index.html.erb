<h1 style="font-weight: 700;">Mood</h1>
<p>Today you are feeling: <em><%= @average %></em></p>
<h3 style="font-weight: 600;">Past 7 days</h3>
<%= link_to "Calendar", calendar_moods_path %>
<div class="container-mood">
  <% @week_moods.each_with_index do |day_mood, index| %>
    <button class="neu circle">
      <p><%= @streak_days[index].strftime("%a") %></p>
      <p><strong><%= @streak_days[index].strftime("%d") %></strong></p>
      <%= link_to "", date_moods_path(@streak_days[index]), class: "card-remove-link" %>
      <i class="<%= mood_fontawesome(day_mood) %>"></i>
    </button>
  <% end %>
</div>
<h3 style="font-weight: 600;">Mood Entries</h3>
<% @moods.each do |mood| %>
  <div class="card-product">
    <div class="card-product-infos">
      <h5><%= mood.created_at.strftime("%D %H:%M %p %z") %></h5>
      <h2><%= mood.rating %></h2>
      <div class="tags">
        <% mood.activity_list.each do |activity| %>
          <p class="activity-card"><%= activity %></p>
        <% end %>
      </div>
    </div>
    <% case mood.rating %>
    <% when "awful" %>
    <span style="font-size: 48px; margin-right: 30px">
      <i class="far fa-sad-cry"></i>
    </span>
    <% when "meh" %>
    <span style="font-size: 48px; margin-right: 30px">
      <i class="far fa-meh"></i>
    </span>
    <% when "neutral" %>
    <span style="font-size: 48px; margin-right: 30px">
      <i class="far fa-smile"></i>
    </span>
    <% when "happy" %>
    <span style="font-size: 48px; margin-right: 30px">
      <i class="far fa-laugh-beam"></i>
    </span>
    <% when "fabulous" %>
    <span style="font-size: 48px; margin-right: 30px">
      <i class="far fa-grin-hearts"></i>
    </span>
  <% else %>
    <i class="fas fa-times"></i>
  <% end %>
</div>
<% end %>